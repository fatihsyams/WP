<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WarungPojokButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WarungPojokButton.Red">
        <item name="backgroundTint">@color/colorRed</item>
    </style>

    <style name="WarungPojokButton.Orange">
        <item name="backgroundTint">@color/colorOrange</item>
    </style>

    <style name="WarungPojokButton.White">
        <item name="backgroundTint">@color/colorWhite</item>
    </style>

    <style name="WarungPojokButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WarungPojokButtonOutlined.White">
        <item name="strokeColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="WarungPojokTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>